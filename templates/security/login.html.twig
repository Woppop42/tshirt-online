{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="div container text-center col-4">
<div class="div border border-black rounded bg-warning p-3">
<form method="post" novalidate>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {# {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
        </div>
    {% endif %} #}

    <h1 class="h3 m-3">Entrez vos identifiants</h1>
    <label for="inputEmail" class="text-light m-3">Email</label>
    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control my-auto" autocomplete="email" required autofocus>
    <label for="inputPassword" class="text-light m-3">Mot de passe</label>
    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary m-3" type="submit">
        Se connecter
    </button>
</form>
</div>
</div>
{% endblock %}