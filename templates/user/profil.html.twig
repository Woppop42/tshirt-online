{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center">Profil de {{user.pseudo}}</h1>

<table class="table table-dark">
<thead>
    <tr>
    
    
        <th>Quantité</th>
        <th>Etat</th>
        <th>Prix</th>
        <th>ID Article</th>
        <th>Date d'enregistrement</th>
    </tr>
</thead>

<tbody>
    <tr>
    {% for commande in commandes %}
        <tr>
            <td>{{commande.quantite}}</td>
            <td>{{commande.etat}}</td>
            <td>{{commande.prix}}</td>
            <td>{{commande.produitId}}</td>
            <td>{{commande.dateEnregistrement|date("d/m/Y à H:i:s")}}</td>
        </tr>
    {% endfor %}
    </tr>
</tbody>
</table>


{% endblock %}